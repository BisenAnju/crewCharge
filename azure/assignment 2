// console.log("workItemAPI");
                        // console.log(workItemAPI);
                        axios
                          .get(workItemAPI, headers)
                          .then(response => {
                            // console.log("workItem details");
                            // console.log(response.data);
                            workItemArray.push(response.data);
                          })
                          .catch(error =>
                            console.log(error + " couldn't fetch workitem API")
                          );



